{
	"info": {
		"_postman_id": "ninfinances-collection",
		"name": "NinFinances API",
		"description": "Collection para testar os endpoints da API NinFinances",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Register",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/register",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "register"]
						},
						"description": "Registra um novo usuário"
					}
				},
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "login"]
						},
						"description": "Autentica um usuário existente"
					}
				}
			]
		},
		{
			"name": "Transactions",
			"item": [
				{
					"name": "Get All Transactions",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/transactions",
							"host": ["{{baseUrl}}"],
							"path": ["transactions"]
						},
						"description": "Lista todas as transações do usuário autenticado"
					}
				},
				{
					"name": "Create Transaction",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"description\": \"Salário\",\n    \"amount\": 5000,\n    \"date\": \"2024-03-20\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/transactions",
							"host": ["{{baseUrl}}"],
							"path": ["transactions"]
						},
						"description": "Cria uma nova transação"
					}
				},
				{
					"name": "Get Transaction by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/transactions/:id",
							"host": ["{{baseUrl}}"],
							"path": ["transactions", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "",
									"description": "ID da transação"
								}
							]
						},
						"description": "Obtém uma transação específica"
					}
				},
				{
					"name": "Update Transaction",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"description\": \"Salário Atualizado\",\n    \"amount\": 5500,\n    \"date\": \"2024-03-20\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/transactions/:id",
							"host": ["{{baseUrl}}"],
							"path": ["transactions", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "",
									"description": "ID da transação"
								}
							]
						},
						"description": "Atualiza uma transação existente"
					}
				},
				{
					"name": "Delete Transaction",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/transactions/:id",
							"host": ["{{baseUrl}}"],
							"path": ["transactions", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "",
									"description": "ID da transação"
								}
							]
						},
						"description": "Remove uma transação"
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000/api",
			"type": "string"
		},
		{
			"key": "token",
			"value": "seu-token-jwt-aqui",
			"type": "string"
		}
	]
} 